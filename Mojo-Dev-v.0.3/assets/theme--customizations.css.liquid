/* Add your theme customizations below */

.off-canvas--viewport {
  max-width: 2560px;
  margin: auto;
}

/** 
 * Custom Style
 */
#admin-bar-iframe {
  display: none;
}

@font-face {
  font-family: Bely;
  src: url("Bely.woff") format("woff"),
       url("Bely.woff2") format("woff2");
}

@font-face {
  font-family: Bely Italic;
  src: url("Bely_Italic.woff") format("woff"),
       url("Bely_Italic.woff2") format("woff2");
}

@font-face {
  font-family: Bely Bold;
  src: url("Bely_Bold.woff") format("woff"),
       url("Bely_Bold.woff2") format("woff2");
  font-weight: 600;
}

@font-face {
  font-family: Bely Bold Italic;
  src: url("Bely_Bold_Italic.woff") format("woff"),
       url("Bely_Bold_Italic.woff2") format("woff2");
}

html, body, div, a, p, input, li {
  font-family: Open Sans;
  font-style: normal;
}

h1, h2, h4, .h1, .h2, .h4 {
  font-family: Bely Bold;
  font-style: normal;
}

h3, .h3 {
  font-family: Bely Bold Italic;
  font-style: normal;
}

h5, .h5 {
  font-family: Open Sans;
  font-weight: bold;
  font-style: normal;
  text-transform: uppercase;
}

h6, .h6 {
  font-family: Open Sans;
  font-style: normal;
}

.italic {
  font-family: Open Sans;
  font-style: italic;
}

b, strong, .bold {
  font-family: Open Sans;
  font-style: normal;
}

h1, .h1 {
  font-size: 60px;
  line-height: 60px;
  margin-bottom: 24px;
  color: #ffffff;
}

h2, .h2 {
  font-size: 48px;
  margin-bottom: 30px;
}

h3, .h3, h4, .h4 {
  font-size: 44px;
  line-height: 1.2;
  margin-bottom: 24px;
}

h6, .h6 {
  font-size: 18px;
  color: #ffffff;
}

h5, .h5 {
  font-size: 20px;
  margin-bottom: 25px;
}

html, div, li, input, a {
  font-size: 16px;
  line-height: 24px;
}

p {
  font-size: 16px;
  line-height: 1.5;
  margin-bottom: 20px;
}

p.small {
  font-size: 14px;
}

button, .button, .btn, input[type='submit'] {
  border: 1px solid #d1263a;
  overflow: hidden;
  padding: 0 20px;
  background-color: #d1263a !important;
  color: #ffffff;
}

button:hover, .button:hover, .btn:hover, input[type='submit']:hover {
  background-color: #ee263a !important;
}

#shopify-section-header {
	position: absolute;
  top: 10px;
  width: 100%;
  height: 100px;
  z-index: 2;
  background-color: rgba(255,255,255,0);
  box-shadow: 0 0 0px rgba(0,0,0,0);
  transition: height 0.4s;
}
#shopify-section-header.on-top {
  background-color: rgba(255,255,255,0) !important;
}

#shopify-section-header.sticky {
  position: fixed;
  top: 0;
  border-bottom: 1px solid rgba(255,255,255,.5);
  background-color: rgba(255,255,255,.2);
}

#shopify-section-header.fixed {
  background-color: rgba(255,255,255,1) !important;
  box-shadow: 0 0 20px rgba(0,0,0,0.1);
  height: 80px;
}

#shopify-section-header header .fw--logo {
  width: 140px;
}

#shopify-section-header.fixed header .fw--logo img {
  height: 60px;
}

header .fw--logo img {
  transition: 0.4s;
}

.layout--header .left-side .x-menu a {
  font-size: 0.9rem;
  letter-spacing: .2rem;
  font-weight: 600;
  text-transform: none;
  color: #fff;
  transition: .5s;
}

#shopify-section-header.sticky .layout--header a {
  color: #d1263a;
}

#shopify-section-header .layout--header .right-side a {
  display: none !important;
  color: #d1263a;
}

.layout--header {
  padding: 0 20px;
}

.text-wrap a.link {
  text-decoration: underline;
}

.x-menu {
  height: 30px;
  padding-left: 15px;
  vertical-align: bottom;
}

.layout--header[data-header--logo-type='overflowing'] .fw--logo {
    margin-left: 0;
    top: 10px;
}

.layout--main-content {
	overflow: hidden;
  min-height: 75vh;
}

.template--index .layout--main-content .shopify-section {
    padding-bottom: 0;
}

.no-parallax > .container > .background-image {
  position: absolute !important;
}

.asterisk-vertical::after {
    position: absolute;
    z-index: 2;
    width: 50vh;
    right: -23.3vh;
    font-size: 1rem;
    font-weight: 900;
    letter-spacing: 5vh;
    content: "\2731\2731\2731\2731\2731\2731\2731\2731\2731\2731\2731\2731";
    color: red;
    transform: rotateZ(90deg);
    overflow: hidden;
}

#shopify-section-framework--footer {
  background-color: #ffffff;
}

#shopify-section-framework--footer .footer--root {
    background-color: #175663;
    color: #ffffff;
}

.footer--subscribe .footer--form-container {
  max-width: unset;
  width: 420px;
}

.footer--subscribe .footer--form-container input[type='submit'] {
  border: 1px solid #d1263a;
  overflow: hidden;
  padding: 0 20px;
  background-color: #d1263a;
}

.footer--subscribe .footer--form-container input[type='submit']:hover {
  background-color: #ee263a;
}

.footer--subscribe .footer--form-container input[type='email'] {
  color: #175663;
}

.footer--about-text {
    max-width: 520px;
}

.footer--alt {
  position: fixed;
  width: 100%;
  z-index: 5;
  padding: 10px;
  bottom: -160px;
  transition: bottom 0.4s;
  background-color: #175663;
}

.footer--alt.sticky-bottom {
  bottom: 0;
}

.footer--alt-inner {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
  height: 100%;
  color: #ffffff;
}

.footer--alt-text {
  font-size: 1.8rem;
  line-height: 46px;
  margin-bottom: 0;
  font-family: bely bold;
}

.footer--alt-wrap {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-right: 50px;
}

.footer--alt #footer-email {
  margin-bottom: 0;
  border: none;
}

.footer--alt-close {
  padding: 20px 15px;
  position: absolute;
  right: 0;
  top: 0;
  text-align: center;
}

.footer--alt-close-btn {
  padding: 10px 15px;
  cursor: pointer;
  border-radius: 50%;
}

.footer--alt-close-btn:hover {
  background-color: rgba(255, 255, 255, .3);
}

.footer--block[data-block-type='subscribe'] .footer--block--container {
  width: 320px;
}

.off-canvas--open .icon--menu {
  color: #d1263a;
}

@media (max-width: 1399px) {
  h1, .h1 {
    font-size: 54px;
    margin-bottom: 30px;
  }

  h3, .h3, h4, .h4 {
    font-size: 40px;
    line-height: 48px;
    margin-bottom: 20px;
  }

  h5, .h5 {
    font-size: 18px;
    margin-bottom: 20px;
  }

  h6, .h6 {
    font-size: 16px;
  }

  p {
    font-size: 14px;
    margin-bottom: 15px;
  }

  p.small {
    font-size: 12px;
  }

  .text-container:not(.center) .text-wrap {
    padding-left: 15% !important;
    padding-right: 15% !important;
  }
}

@media (max-width: 1199px) {
  .footer--subscribe .footer--form-container {
    max-width: unset;
    width: 320px;
  }

  .text-container:not(.center) .text-wrap {
    padding-left: 10% !important;
    padding-right: 10% !important;
  }
}

@media (max-width: 1099px) and (min-width: 1000px) {
  .text-container:not(.center) .text-wrap {
    padding-left: 5% !important;
    padding-right: 5% !important;
  }
}

@media (max-width: 999px) {
  h1, .h1 {
    font-size: 48px;
    margin-bottom: 30px;
  }

  h3, .h3, h4, .h4 {
    font-size: 34px;
    line-height: 42px;
    margin-bottom: 20px;
  }

  h6, .h6 {
    font-size: 15px;
  }

  .mobile-flat .background-image {
    position: relative !important;
  }

  .mobile-flat .background-overlay {
    display: none;
  }

  .mobile-flat .text-container {
    position: relative !important;
    background-color: #ffffff;
  }

  .text-inner {
    width: 100% !important;
  }

  .mobile-flat .text-wrap {
    padding-top: 10% !important;
    padding-bottom: 10% !important;
  }
}

@media (max-width: 767px) {
  h1, .h1 {
    font-size: 30px;
    line-height: 30px;
    margin-bottom: 10px;
  }

  h3, .h3, h4, .h4 {
    font-size: 28px;
    line-height: 32px;
    margin-bottom: 18px;
  }

  h5, .h5 {
    font-size: 16px;
    margin-bottom: 12px;
  }

  h6, .h6 {
    font-size: 12px;
  }

  p {
    font-size: 14px;
    line-height: 24px !important;
    margin-bottom: 8px;
    padding-bottom: 5px !important;
  }

  .featured-content--root {
      padding: 0 !important;
  }

  #shopify-section-header {
    top: 0;
    position: fixed;
    height: 70px;
    background-color: #ffffff !important;
    box-shadow: 0 0 20px rgba(0,0,0,0.1);
  }

  .layout--header .fw--logo img {
    max-width: unset !important;
  }

  .layout--header .fw--logo img {
    max-height: 50px;
  }

  .layout--main-content {
    padding-top: 70px !important;
  }

  .text-wrap {
    padding: 0 10% !important;
  }

  .grid-wrap {
    grid-template-columns: repeat(1, 1fr) !important;
    text-align: center;
  }

  .grid-wrap .grid {
    padding-bottom: 10%
  }

  .grid-wrap .grid .grid-inner {
    max-width: 200px;
    margin: 0 auto;
  }

  .text-container .text-inner .text-wrap > div > div {
    width: 100% !important;
    padding: 10px 0;
  }

  .text-container .text-inner .text-wrap .text {
    padding-left: 0 !important;
    padding-right: 0 !important;
  }

  .text-wrap a.link {
    font-size: 14px !important;
  }

  .footer--subscribe .footer--form-container {
    max-width: 100%;
  }

  .footer--subscribe .footer--form-container input[type='email'] {
    font-size: 12px;
  }

  .container-image {
    width: 50% !important;
  }

  .asterisk-container .container-text {
    padding: 0 !important;
    width: 50% !important;
  }
}

@media (max-width: 677px) {
  .footer--alt-inner {
    justify-content: flex-start;
  }
  .footer--alt-text {
    margin-bottom: 10px;
  }
}